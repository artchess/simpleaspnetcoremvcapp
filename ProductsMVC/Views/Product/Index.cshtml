@model List<ProductsMVC.Models.Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Product List</title>
</head>
<body>
    <h1>Product List</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Units In Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
            <tr>
                <td>
                    @product.ID
                </td>
                <td>
                    @product.Name
                </td>
                <td>
                    @product.Category
                </td>
                <td>
                    @product.Price
                </td>
                <td>
                    @product.UnitsInStock
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>
